{
    "name": "acoruss-frontend",
    "version": "1.0.0",
    "private": true,
    "description": "Frontend build tools for Acoruss web application",
    "scripts": {
        "build": "postcss src/input.css -o ../src/static/css/main.css --verbose",
        "watch": "postcss src/input.css -o ../src/static/css/main.css --watch --verbose",
        "minify": "postcss src/input.css -o ../src/static/css/main.css --env production --verbose"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.15",
        "autoprefixer": "^10.4.20",
        "cssnano": "^7.0.0",
        "daisyui": "^4.12.0",
        "postcss": "^8.4.49",
        "postcss-cli": "^11.0.0",
        "tailwindcss": "^3.4.17"
    }
}